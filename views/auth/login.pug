extends ../layout/index.pug
block contenido
	.py-10
		h1.text-center.text-4xl.my-10.font-extrabold Bienes
			span.font-normal Raices
		h2.text-center.text-2xl.font-extrabold #{pagina}
		.mt-8.mx-auto.max-w-md
			.bg-white.py-8.px-4.shadow
				form.space-y-5
					div
						label.block.text-sm.text-gray-500.mb-2.font-bold(for="email") Email
						input#email.border.border-gray-300.rounded-md.px-3.py-2.w-full.placeholder-gray-400(type="email", placeholder="Tu email", name="email")
					div
						label.block.text-sm.text-gray-500.mb-2.font-bold(for="password") Password
						input#password.border.border-gray-300.rounded-md.px-3.py-2.w-full.placeholder-gray-400(type="password", placeholder="Tu password", name="password")
					input(type="submit", value="Iniciar Sesión", class="bg-indigo-600 w-full text-white py-3 rounded-md font-bold hover:bg-indigo-700 cursor-pointer transition-colors")
				p.mt-5.text-center.text-gray-500.text-xs ¿No tienes una cuenta? 
					a.text-indigo-600.font-bold(href="/auth/registro") Crear Cuenta
				p.mt-5.text-center.text-gray-500.text-xs ¿Olvidaste tu contraseña? 
					a.text-indigo-600.font-bold(href="/auth/olvido-password") Recuperar Contraseña